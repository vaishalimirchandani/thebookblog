<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>



    <title>The Book Blog</title>

</head>

<body>

<div class="header">

    <div class="header_left"><img src="/images/header_left.png" alt=""></div>
    <div class="hidden-phone header_right"><img src="/images/header_right.png" alt=""></div>
    <div class="logo"><a href="/"><img src="/images/logo.png" alt="" title="" border="0" /></a></div>


    <div class="hidden-phone"><form method='post' action='/posts/search'>
        <div class = "menu" id="search_form">
            <div class="search_form_row">
                <label for="post_title"></label>
                <input type="text" class="search_input" name="search_text" size="40" >
                <input class="submit_button" name="commit" type="submit" value="Search" />
            </div>
        </div>
    </form></div>


    <div class = "menu" id="menu">
        <ul>
            <li id="home" class="selected"><a href="/">home</a></li>
            <li id="books"><a href="/Posts">books</a></li>
            <li id="users"><a href="/Users">users</a></li>
            <li><a href="about.html">about</a></li>
            <li id="register" style="display:none" ><a href='/users/new'> register </a></li>

        </ul>
    </div>


</div>

<div class="row-fluid" >
    <div class="span8 blocks personalize" id="kk" >

        <div class="left_content">

            <section>
                <% var flash = flash() %>

                <% if (flash.info) { %>
                <div class='alert alert-info'>
                <h3 class='alert-heading'>Information:</h3>
                <ul>
                <% for (var i in flash.info) { %>
                <li> <%= flash.info[i] %> </li>
                <% } %>
                </ul>
                </div>
                <% } %>


                <% if (flash.success) { %>
                <div class='alert alert-success'>
                <h3 class='alert-heading'>Completed Tasks:</h3>
                <ul>
                <% for (var i in flash.success) { %>
                <li> <%= flash.success[i] %> </li>
                <% } %>
                </ul>
                </div>
                <% } %>


                <% if (flash.error) { %>
                <div class='alert alert-error'>
                <h3 class='alert-heading'>Error's found:</h3>
                <ul>
                <% for (var i in flash.error) { %>
                <li> <%= flash.error[i] %> </li>
                <% } %>
                </ul>
                </div>
                <% } %>
            </section>

            <%- body %>

        </div>

        <div class="clear"></div>
    </div>


    <div class="span4 blocks hidden-phone personalize" id="pp" >
        <div class="right_content">
            <div class="right_box">
                <div class="right_title"><i class="icon-user"></i> User Information</div>
                <div class="clear"></div>

                <div id='logininfo'>
                    <ul class="list">
                        <% if (session.user) { %>

                        <li><%= session.user.name %></li>
                        <br/>
                        <li><a href='/logout'> Logout </a></li>

                        <% } else { %>

                        <li><a href='/login?redir=/posts'> Login </a></li>
                        <br/>
                        <li><a href='/users/new'> Register </a></li>

                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="right_box">
                <div class="right_title">
                    <i class="icon-book"></i> About The Book Blog
                </div>

                <div class="clear"></div>

                <a href="about.html">
                    <img src="/images/about.gif" alt="" title="" class="right" />
                </a>

                <p>The Book Blog is the result of the SWCM final project.</p>
                <p>Click on the image to learn more about it.</p>
            </div>

            <div class="right_box">
                <div class="right_title"><i class="icon-tags"></i> Tags</div>
                <ul class="list">
                    <li><a href="#">tag1</a></li>
                </ul>
            </div>


            <div class="right_box" id="last">
                <div class="right_title">Visits since launched: <%= counter %> </div>
            </div>

        </div>
    </div>
</div>

<div class="clear"></div>

<!--end of center content-->

<div class="footer">
    <div class="left_footer"><h4>SWCM 2012-2013</h4></div>
    <div class="right_footer"><h4>Vaishali-Narain Mirchandani Darayanani</h4></div>
</div>


<script type="text/javascript">


        myWidth = window.innerWidth;
        if (myWidth < 768){
            document.getElementById('kk').style.width = '100%'
            document.getElementById('register').style.display = 'inline'
            document.body.style.minWidth = '375px';
        }


        var highestCol = Math.max($('#kk').height(),$('#pp').height());
        $('.blocks').height(highestCol)
        console.log(highestCol);


    window.onresize = function(event) {
        myWidth = window.innerWidth;

        if (myWidth < 784
        ){
            document.getElementById('kk').style.width = '100%'
            document.getElementById('register').style.display = 'inline'
            document.body.style.minWidth = '375px';
        }
        else{
            document.getElementById('kk').style.width = '66%'
            document.getElementById('register').style.display = 'none'
            document.body.style.minWidth = '780px';
        }
    }
</script>


</body>

</html>

