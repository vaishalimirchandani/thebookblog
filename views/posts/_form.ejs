<div class="left_box" id="post_form">
    <div class="post_form">
    <div class="post_form_subtitle">all fields are requierd</div>
        <div class="post_form_row">
            <div class="post_field">
                <div class='<%- locals.validate_errors && validate_errors.title
                            ? "invalid_field"
                            : "field" %>'>
                    <label for="post_title" class="newPost">Book Title</label><br />
                    <input type="text" id="post_title" class="post_input" name="post[title]" value='<%= post.title%>' />
                </div>
            </div>
        </div>



        <div class="post_form_row">
            <div class="post_field">
                <div class='<%- locals.validate_errors && validate_errors.body
                                  ? "invalid_field"
                                  : "field" %>'>
                    <label for="post_body" class="newPost">Synopsis</label><br />
                    <textarea id="post_body" class="post_textarea" name="post[body]" rows="20"><%= post.body %>
                    </textarea>
                </div>
            </div>
        </div>


        <div class="post_form_row">
        <div class="actions contact">
            <input class="submit_button" name="commit" type="submit" value="Save" />
        </div>
    </div>
</div

<div class="clear"></div>